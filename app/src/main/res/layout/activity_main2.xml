<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Edit text for getting item ID-->
    <EditText
        android:id="@+id/enterID_mm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter ID"
        android:importantForAutofill="no"
        android:inputType="text" />

    <!--Button for searching-->
    <Button
        android:id="@+id/btnSubmitID_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Search"
        android:textAllCaps="false" />

    <!--Button for going back-->
    <Button
        android:id="@+id/btnPrev_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Back"
        android:textAllCaps="false" />

    <androidx.cardview.widget.CardView
        android:id="@+id/idCVGroceryItem_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="4dp">

            <!--TextView for displaying item Name-->
            <TextView
                android:id="@+id/idTVmm_itm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--TextView for displaying item Price-->
            <TextView
                android:id="@+id/idTVmm_itm_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Price"
                android:textColor="@color/black" />

            <!--TextView for displaying item Quantity-->
            <TextView
                android:id="@+id/idTVmm_itm_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Quantity"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:padding="4dp">

                <!--Button for deleting details-->
                <Button
                    android:id="@+id/idBtnDeleteGroceryDetails"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Delete"
                    android:textAllCaps="false"></Button>

                <!--Button for editing details-->
                <Button
                    android:id="@+id/idBtnEditGroceryDetails"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="Edit"
                    android:textAllCaps="false"></Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
